name: SonarCloud Simple Analysis

on:
  push:
    branches: [ main, refactoring, develop ]
  workflow_dispatch:

jobs:
  sonarcloud:
    name: SonarCloud Analysis
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Setup Java
      uses: actions/setup-java@v3
      with:
        distribution: 'zulu'
        java-version: '17'

    - name: Cache SonarCloud packages
      uses: actions/cache@v3
      with:
        path: ~/.sonar/cache
        key: ${{ runner.os }}-sonar
        restore-keys: ${{ runner.os }}-sonar

    - name: SonarCloud Scan
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}
      run: |
        echo "Starting SonarCloud analysis..."
        echo "Project: Gfermoto_soil-sensor-7in1"
        echo "Organization: gfermoto"
        echo "Sources: src"
        
        # Скачиваем SonarCloud Scanner
        curl -sSLo $HOME/sonar-scanner.zip https://binaries.sonarsource.com/Distribution/sonar-scanner-cli/sonar-scanner-cli-4.8.0.2856-linux.zip
        unzip -o $HOME/sonar-scanner.zip -d $HOME/
        export PATH=$PATH:$HOME/sonar-scanner-4.8.0.2856-linux/bin
        
        # Запускаем анализ
        sonar-scanner \
          -Dsonar.organization=gfermoto \
          -Dsonar.projectKey=Gfermoto_soil-sensor-7in1 \
          -Dsonar.sources=src \
          -Dsonar.host.url=https://sonarcloud.io
        
        echo "Analysis completed successfully!" 